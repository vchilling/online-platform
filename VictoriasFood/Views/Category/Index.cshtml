@{@model IEnumerable<VictoriasFood.Models.Category>
    ViewBag.Title = "List of Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="well-sm-2">
    <div class="container">
        <div class="row text-center text-md-left">
            <div class="col-md-12">
                <h2>List - Index of Categories</h2>
                @if (!Model.Any())
                {
                    <p> We don't have any Category yet.</p>
                }
                else
                {
                    <table class="table-bordered">
                        <thead>
                            <tr class="table-row table-header">
                                <th>Title of the Category</th>
                                <th>Details of the Category </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr class="table-row">
                                    <td>
                                        @Html.ActionLink(category.categoryTitle, "DetailsCategory", "Category", new { id = category.categoryID }, null)
                                    </td>
                                    <td>
                                        @category.categoryDescription
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</section>
