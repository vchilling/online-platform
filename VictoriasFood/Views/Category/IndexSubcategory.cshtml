@{@model IEnumerable<VictoriasFood.Models.Subcategory>
    ViewBag.Title = "List of Subcategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="well-sm-2">
    <div class="container">
        <div class="row text-center text-md-left">
            <div class="col-md-12">
                <h2>List - Index of Categories</h2>
                @if (!Model.Any())
                {
                    <p> We don't have any Subcategory yet.</p>
                }
                else
                {
                    <table class="table-bordered">
                        <thead>
                            <tr class="table-row table-header">
                                <th>Title of the Subcategory</th>
                                <th>Details of the Subcategory </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subcategory in Model)
                            {
                                <tr class="table-row">
                                    <td>
                                        @Html.ActionLink(subcategory.subcategoryTitle, "DetailsSubcategory", "Category", new { id = subcategory.subcategoryID }, null)
                                    </td>
                                    <td>
                                        @subcategory.subcategoryDescription
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</section>
