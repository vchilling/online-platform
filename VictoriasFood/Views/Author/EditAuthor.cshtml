@model VictoriasFood.Models.Author
@{
    ViewBag.Title = "Edit User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="well-sm-2">
    <div class="container">
        <div class="row text-center text-md-left">
            <div class="col-md-12">
                <h2>Edit User Details</h2>

                @using (Html.BeginForm("UpdateAuthorInDatabase", "Author"))
                {
                    <div class="edit-form-group">
                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.authorFirstName)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.authorFirstName)
                                    @Html.ValidationMessageFor(m => m.authorFirstName)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.authorSecondName)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.authorSecondName)
                                    @Html.ValidationMessageFor(m => m.authorSecondName)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.authorLastName)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.authorLastName)
                                    @Html.ValidationMessageFor(m => m.authorLastName)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.addressLine1)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.addressLine1)
                                    @Html.ValidationMessageFor(m => m.addressLine1)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.addressLine2)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.addressLine2) 
                                    @Html.ValidationMessageFor(m => m.addressLine2)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.telephoneNumber)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.telephoneNumber)
                                    @Html.ValidationMessageFor(m => m.telephoneNumber)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.authorCv)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.authorCv)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.facebook)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.facebook)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.twitter)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.twitter)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.instagram)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.instagram)
                                </td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <th>
                                    @Html.LabelFor(m => m.website)
                                </th>
                                <td>
                                    @Html.TextBoxFor(m => m.website)
                                </td>
                            </tr>
                        </table>
                    </div>

                    <table>
                        <tr>
                            <td>
                                @Html.HiddenFor(m => m.authorID)
                                @Html.HiddenFor(m => m.email)
                                @Html.AntiForgeryToken()
                                <div class="mfControls ">
                                    <button type="submit" class="btn btn-sm btn-primary save-edit"> Save </button>
                                </div>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</section>


